<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#37474f"
    android:orientation="vertical"
    android:padding="15dp">

    <TextView
        android:id="@+id/tv_itm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sort"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="22dp" />

    <RadioGroup
        android:id="@+id/rgroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="vertical"
        android:textColor="#fff"
        android:textSize="19dp">

        <RadioButton
            android:id="@+id/name_ascending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:checked="true"
            android:text="Sort By Name (ascending)"
            android:textColor="#fff"
            android:textSize="19dp" />

        <RadioButton
            android:id="@+id/name_descending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="Sort By Name (descending)"
            android:textColor="#fff"
            android:textSize="19dp" />

        <RadioButton
            android:id="@+id/date_ascending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="Sort By Install Date (ascending)"
            android:textColor="#fff"
            android:textSize="19dp" />

        <RadioButton
            android:id="@+id/date_descending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="Sort By Install Date (descending)"
            android:textColor="#fff"
            android:textSize="19dp" />

        <RadioButton
            android:id="@+id/size_ascending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="Sort By Size (ascending)"
            android:textColor="#fff"
            android:textSize="19dp" />

        <RadioButton
            android:id="@+id/size_descending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="Sort By Size (descending)"
            android:textColor="#fff"
            android:textSize="19dp" />
    </RadioGroup>

    <Button
        android:id="@+id/btnApply"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="30dp"
        android:background="#263238"
        android:text="Apply"
        android:textColor="#fff"
        android:textSize="15dp" />
</LinearLayout>